{
  "type": "object",
  "patternProperties": {
    "^.*$": {
      "type": "object",
      "properties": {
        "image": {
          "type": "string"
        },
        "music": {
          "type": ["string", "null", "number"]
        },
        "cardinal": {
          "type": "string"
        },
        "exits": {
          "type": "object",
          "properties": {
            "forward": {
              "type": ["string", "object"],
              "properties": {
                "presence": {"$ref": "#/$defs/presence"},
                "destination": {"$ref": "#/$defs/destination"}
              }
            },
            "backward": {
              "type": ["string", "object"],
              "properties": {
                "presence": {"$ref": "#/$defs/presence"},
                "destination": {"$ref": "#/$defs/destination"}
              }
            },
            "left": {
              "type": ["string", "object"],
              "properties": {
                "presence": {"$ref": "#/$defs/presence"},
                "destination": {"$ref": "#/$defs/destination"}
              }
            },
            "right": {
              "type": ["string", "object"],
              "properties": {
                "presence": {"$ref": "#/$defs/presence"},
                "destination": {"$ref": "#/$defs/destination"}
              }
            },
            "up": {
              "type": ["string", "object"],
              "properties": {
                "presence": {"$ref": "#/$defs/presence"},
                "destination": {"$ref": "#/$defs/destination"}
              }
            },
            "down": {
              "type": ["string", "object"],
              "properties": {
                "presence": {"$ref": "#/$defs/presence"},
                "destination": {"$ref": "#/$defs/destination"}
              }
            }
          }
        },
        "actions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "rect": {
                "type": "array",
                "items": {
                  "type": "integer",
                  "minimum": 1
                },
                "minItems": 4,
                "maxItems": 4
              },
              "look": {
                "type": "object",
                "properties": {
                  "result": {
                    "type": "string",
                    "enum": [
                      "text",
                      "exit",
                      "script"
                    ]
                  },
                  "contents": {
                    "type": "string"
                  }
                },
                "required": [
                  "result",
                  "contents"
                ]
              },
              "use": {
                "type": "object",
                "properties": {
                  "result": {
                    "type": "string",
                    "enum": [
                      "text",
                      "exit",
                      "script"
                    ]
                  },
                  "contents": {
                    "type": "string"
                  }
                },
                "required": [
                  "result",
                  "contents"
                ]
              },
              "go": {
                "type": "object",
                "properties": {
                  "result": {
                    "type": "string",
                    "enum": [
                      "text",
                      "exit",
                      "script"
                    ]
                  },
                  "contents": {
                    "type": ["string", "object"],
                    "properties": {
                      "presence": {"$ref": "#/$defs/presence"},
                      "destination": {"$ref": "#/$defs/destination"}
                    }
                  }
                },
                "required": [
                  "result",
                  "contents"
                ]
              }
            }
          },
          "minItems": 1
        }
      },
      "required": [
        "image"
      ]
    }
  },
  "$defs": {
    "presence": {
      "type": "object",
      "properties": {
        "chance": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "funvalue_constraints": {
          "type": "array",
          "items": {
            "type": "array",
            "minItems": 2
          }
        }
      }
    },
    "destination": {
      "type": ["string", "object"],
      "properties": {
        "default": {
          "type": "string"
        },
        "chance": {
          "type": "array",
          "prefixItems": [
            {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            {
              "type": "string"
            }
          ]
        },
        "funvalue_constraints": {
          "type": "array",
          "items": {
            "type": "array",
            "minItems": 3
          }
        }
      },
      "required": [
        "default"
      ]
    }
  }
}
