{
  "type": "object",
  "patternProperties": {
    "^.*$": {
      "type": "object",
      "properties": {
        "image": {
          "type": "string"
        },
        "music": {
          "type": ["string", "null", "number"]
        },
        "exits": {
          "type": "object",
          "items": {
            "type": "string",
            "enum": [
              "forward",
              "backward",
              "left",
              "right",
              "up",
              "down"
            ]
          }
        },
        "actions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "rect": {
                "type": "array",
                "items": {
                  "type": "integer",
                  "minimum": 1
                },
                "minItems": 4,
                "maxItems": 4
              },
              "look": {
                "type": "object",
                "properties": {
                  "result": {
                    "type": "string",
                    "enum": [
                      "text",
                      "exit",
                      "script"
                    ]
                  },
                  "contents": {
                    "type": "string"
                  }
                },
                "required": [
                  "result",
                  "contents"
                ]
              },
              "use": {
                "type": "object",
                "properties": {
                  "result": {
                    "type": "string",
                    "enum": [
                      "text",
                      "exit",
                      "script"
                    ]
                  },
                  "contents": {
                    "type": "string"
                  }
                },
                "required": [
                  "result",
                  "contents"
                ]
              },
              "go": {
                "type": "object",
                "properties": {
                  "result": {
                    "type": "string",
                    "enum": [
                      "text",
                      "exit",
                      "script"
                    ]
                  },
                  "contents": {
                    "type": "string"
                  }
                },
                "required": [
                  "result",
                  "contents"
                ]
              }
            }
          },
          "minItems": 1
        }
      },
      "required": [
        "image"
      ]
    }
  }
}
